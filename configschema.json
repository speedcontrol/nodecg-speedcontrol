{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "language": {
      "type": "string",
      "enum": [
        "en",
        "ja"
      ],
      "default": "en"
    },
    "twitch": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "clientID": {
          "type": "string",
          "default": "CLIENT_ID"
        },
        "clientSecret": {
          "type": "string",
          "default": "CLIENT_SECRET"
        },
        "redirectURI": {
          "type": "string",
          "default": "http://localhost:9090/nodecg-speedcontrol/twitchauth"
        },
        "additionalScopes": {
          "oneOf": [
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "channelName": {
          "type": "string"
        },
        "streamTitle": {
          "type": "string",
          "default": "Game: {{game}} - Category: {{category}} - Players: {{players}}"
        },
        "streamDefaultGame": {
          "type": "string",
          "default": "Games + Demos"
        },
        "ffzIntegration": {
          "type": "boolean",
          "default": false
        },
        "ffzUseRepeater": {
          "type": "boolean"
        },
        "ffzBlacklist": {
          "oneOf": [
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "enabled",
        "clientID",
        "clientSecret",
        "redirectURI",
        "streamTitle",
        "streamDefaultGame"
      ]
    },
    "schedule": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "defaultURL": {
          "type": "string",
          "default": "https://horaro.org/event/schedule"
        },
        "ignoreGamesWhileImporting": {
          "oneOf": [
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "disableSpeedrunComLookup": {
          "type": "boolean",
          "default": false
        },
        "customData": {
          "oneOf": [
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "key": {
                    "type": "string"
                  },
                  "ignoreMarkdown": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "name",
                  "key"
                ]
              }
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "defaultURL",
        "disableSpeedrunComLookup"
      ]
    },
    "oengus": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "defaultMarathon": {
          "type": "string",
          "default": "SHORTNAME"
        },
        "useJapanese": {
          "type": "boolean",
          "default": false
        },
        "disableSpeedrunComLookup": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "defaultMarathon",
        "useJapanese",
        "disableSpeedrunComLookup"
      ]
    },
    "customData": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "player": {
              "oneOf": [
                {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "key": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "name",
                      "key"
                    ]
                  }
                }
              ]
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "checklist": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "items": {
          "oneOf": [
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "forceCheckBeforeStartTimer": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "enabled",
        "forceCheckBeforeStartTimer"
      ]
    }
  },
  "required": [
    "language",
    "twitch",
    "schedule",
    "oengus",
    "checklist"
  ]
}